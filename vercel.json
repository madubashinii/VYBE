{
    "version": 2,
    "projects": [
        {
            "name": "frontend",
            "rootDirectory": "frontend"
        },
        {
            "name": "backend",
            "rootDirectory": "backend"
        }
    ],
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}